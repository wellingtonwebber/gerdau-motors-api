// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Motor {
  id           String  @id @default(uuid())
  code         String  @unique
  manufacturer String?
  power        Float   @default(0)
  voltage      Int
  current      Float
  rpm          Int
  frame        String?
  type         String?
  model        String?
  status       String

  @@map("motors")
}
